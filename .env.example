# =============================================================================
# AICC Pipeline - Unified Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Usage: source .env && python run_pipeline.py
# =============================================================================

# -----------------------------------------------------------------------------
# Asterisk / Linphone Configuration
# -----------------------------------------------------------------------------

# Linphone Account (Required for deploy.sh)
LINPHONE_PASSWORD=Dudgh12!

# EC2 Configuration (Optional - auto-detected if not set)
# EC2_PUBLIC_IP=13.209.97.212

# ExternalMedia Configuration (for app.js)
# Note: ARI settings (URL, USERNAME, PASSWORD) are managed in config/ari.conf
EXTERNAL_HOST=127.0.0.1
CUSTOMER_PORT=12345
AGENT_PORT=12346
APP_NAME=linphone-handler

# -----------------------------------------------------------------------------
# AICC Pipeline Configuration
# -----------------------------------------------------------------------------

# WebSocket URLs (required - all URLs receive events simultaneously)
AICC_WS_URL=wss://your-server.ngrok-free.dev/api/v1/agent/check
AICC_WS_URL_1=
AICC_WS_URL_2=

# UDP Ports (must match CUSTOMER_PORT/AGENT_PORT above)
AICC_CUSTOMER_PORT=12345
AICC_AGENT_PORT=12346

# VAD Settings
# VAD tuning for telephony (recommended for less false positives)
AICC_VAD_THRESHOLD=0.7
AICC_MIN_SPEECH_MS=250.0
AICC_MIN_SILENCE_MS=400.0

# WebSocket Settings
AICC_WS_RECONNECT_INTERVAL=5.0
AICC_WS_QUEUE_MAXSIZE=1000

# STT Settings
AICC_STT_LANGUAGE=ko-KR
GOOGLE_APPLICATION_CREDENTIALS=/path/to/gcloud/credentials.json

# Proper noun hints (comma-separated) or file path (one per line)
AICC_STT_PHRASES=
AICC_STT_PHRASES_PATH=./phrases.txt
AICC_STT_PHRASE_BOOST=10.0

# Turn Detection Weights (must sum to 1.0)
AICC_TURN_MORPHEME_WEIGHT=0.6
AICC_TURN_DURATION_WEIGHT=0.2
AICC_TURN_SILENCE_WEIGHT=0.2
AICC_TURN_COMPLETE_THRESHOLD=0.65

# Logging
AICC_LOG_LEVEL=INFO
AICC_DEBUG=false

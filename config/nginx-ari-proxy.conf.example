# Nginx Reverse Proxy for Asterisk ARI
#
# Use this to expose ARI securely with TLS and authentication.
# Place in /etc/nginx/sites-available/ and enable with symlink.
#
# Prerequisites:
#   - SSL certificate at /etc/ssl/certs/ari.crt
#   - SSL key at /etc/ssl/private/ari.key
#   - htpasswd file at /etc/nginx/.htpasswd-ari

server {
    listen 8443 ssl;
    server_name _;

    # SSL Configuration
    ssl_certificate /etc/ssl/certs/ari.crt;
    ssl_certificate_key /etc/ssl/private/ari.key;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;
    ssl_prefer_server_ciphers on;

    # Logging
    access_log /var/log/nginx/ari-access.log;
    error_log /var/log/nginx/ari-error.log;

    # ARI Proxy
    location /ari/ {
        # Basic auth
        auth_basic "Asterisk ARI";
        auth_basic_user_file /etc/nginx/.htpasswd-ari;

        # Proxy to local ARI
        proxy_pass http://127.0.0.1:8088/ari/;
        proxy_http_version 1.1;

        # WebSocket support for ARI events
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Health check endpoint (no auth)
    location /health {
        proxy_pass http://127.0.0.1:8088/ari/asterisk/ping;
    }
}
